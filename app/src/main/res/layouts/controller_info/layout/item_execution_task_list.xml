<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <me.foxaice.smartlight.fragments.controllers_screen.controller_management.view.dialogs.execution_task.CheckMarkProgressView
        android:id="@+id/fragment_controller_management_dialog_view_checkmark"
        android:layout_width="@dimen/check_mark_progress_size"
        android:layout_height="@dimen/check_mark_progress_size"/>

    <TextView
        android:id="@+id/fragment_controller_management_dialog_text_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/fragment_controller_management_dialog_view_checkmark"
        android:gravity="top|left"
        android:textColor="@color/backgroundGroup"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded"
        tools:text="rebooting ..."/>

</RelativeLayout>