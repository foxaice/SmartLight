<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/activity_music_mode_settings_image_close"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/partial_toolbar_selector_background_settings"
            android:clickable="true"
            android:contentDescription="@string/content_description_close_button"
            android:padding="15dp"
            app:srcCompat="@drawable/music_mode_settings_close_button"
            tools:ignore="RtlHardcoded"/>

        <TextView
            android:id="@+id/activity_music_mode_settings_text_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/activity_music_mode_settings_image_close"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:ignore="RtlHardcoded"/>

        <ImageView
            android:id="@+id/activity_music_mode_settings_image_reset"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/partial_toolbar_selector_background_settings"
            android:clickable="true"
            android:contentDescription="@string/content_description_reset_button"
            android:padding="15dp"
            app:srcCompat="@drawable/music_mode_settings_reset_button"
            tools:ignore="RtlHardcoded"/>

        <TextView
            android:id="@+id/activity_music_mode_settings_text_reset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/activity_music_mode_settings_image_reset"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:ignore="RelativeOverlap,RtlHardcoded"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relativeLayout2"
        android:background="#80000000"
        tools:ignore="ContentDescription"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e5e5e5">


            <TextView
                android:id="@+id/activity_music_mode_settings_text_color_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/color_mode"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_music_mode_settings_recycler_color_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#80000000"
                android:scrollbars="none"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_music_mode_settings_text_color_mode">
            </android.support.v7.widget.RecyclerView>

            <ImageView
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#00000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_music_mode_settings_recycler_color_mode"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/activity_music_mode_settings_text_plot_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/sound_view"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"/>

            <RadioGroup
                android:id="@+id/activity_music_mode_settings_radio_group_plot_type"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:background="@drawable/shape_background_radio_group"
                android:checkedButton="@null"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_music_mode_settings_text_plot_type">

                <RadioButton
                    android:id="@+id/activity_music_mode_settings_radio_button_plot_type_frequencies"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_background_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/frequencies"
                    android:textColor="#fff"
                    tools:ignore="RtlHardcoded"/>

                <RadioButton
                    android:id="@+id/activity_music_mode_settings_radio_button_plot_type_waveform"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_background_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/waveform"
                    android:textColor="#fff"/>

                <RadioButton
                    android:id="@+id/activity_music_mode_settings_radio_button_plot_type_none"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_background_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/none"
                    android:textColor="#fff"
                    tools:ignore="RtlHardcoded"/>
            </RadioGroup>

            <ImageView
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#80000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_music_mode_settings_radio_group_plot_type"
                tools:ignore="ContentDescription"/>

            <RelativeLayout
                android:id="@+id/activity_music_mode_settings_rl_max_frequency_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:animateLayoutChanges="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                tools:targetApi="honeycomb">

                <TextView
                    android:id="@+id/activity_music_mode_settings_text_max_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/max_frequency"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <RadioGroup
                    android:id="@+id/activity_music_mode_settings_radio_group_max_frequency_type"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/activity_music_mode_settings_text_max_frequency"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_background_radio_group"
                    android:checkedButton="@null"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/activity_music_mode_settings_radio_button_max_frequency_type_dynamic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_background_radio_button"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/Dynamic"
                        android:textColor="#fff"
                        tools:ignore="RtlHardcoded"/>

                    <RadioButton
                        android:id="@+id/activity_music_mode_settings_radio_button_max_frequency_type_static"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_background_radio_button"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/Static"
                        android:textColor="#fff"
                        tools:ignore="RtlHardcoded"/>
                </RadioGroup>

                <SeekBar
                    android:id="@+id/activity_music_mode_settings_seekbar_max_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_music_mode_settings_radio_group_max_frequency_type"
                    android:layout_marginTop="16dp"
                    android:max="200"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progressDrawable="@drawable/seekbar_progress"
                    android:splitTrack="false"
                    android:thumb="@drawable/seekbar_thumb"
                    android:thumbOffset="7dp"
                    android:thumbTintMode="multiply"
                    android:visibility="gone"
                    tools:targetApi="lollipop"/>
            </RelativeLayout>


            <ImageView
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#80000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_music_mode_settings_rl_max_frequency_type"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/activity_music_mode_settings_text_max_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/max_volume_threshold"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4"/>

            <SeekBar
                android:id="@+id/activity_music_mode_settings_seekbar_max_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:max="90"
                android:maxHeight="10dp"
                android:minHeight="10dp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_progress"
                android:splitTrack="false"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="7dp"
                android:thumbTintMode="multiply"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_music_mode_settings_text_max_volume"
                tools:targetApi="lollipop"/>

            <ImageView
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#80000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_music_mode_settings_seekbar_max_volume"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/activity_music_mode_settings_text_min_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/min_volume_threshold"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider5"/>

            <SeekBar
                android:id="@+id/activity_music_mode_settings_seekbar_min_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:max="90"
                android:maxHeight="10dp"
                android:minHeight="10dp"
                android:progress="90"
                android:progressDrawable="@drawable/seekbar_progress"
                android:splitTrack="false"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="7dp"
                android:thumbTintMode="multiply"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_music_mode_settings_text_min_volume"
                tools:targetApi="lollipop"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</RelativeLayout>